{
  "compilerOptions": {
    "noImplicitAny": true,
    "alwaysStrict": true,
    "lib": ["es2022"],
    "module": "commonjs",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types/", "./@types/"]
  },
  "include": ["**/*.ts"],
  "ts-node": {
    "files": true
  }
}